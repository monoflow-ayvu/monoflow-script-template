{
  "name": "monoflow-script-env",
  "version": "1.18.0",
  "description": "Script padr√£o de todos os scripts. Template para criar um script.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Nome",
        "description": "Nome para saludar",
        "tableView": true,
        "key": "name",
        "type": "textfield",
        "input": true,
        "defaultValue": "User"
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "block": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest --silent"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@babel/plugin-transform-arrow-functions": "7.18.6",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-typescript": "7.18.6",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "8.1.0",
    "@types/jest": "29.2.0",
    "@types/lodash": "4.14.186",
    "@types/node": "18.11.7",
    "@types/uuid": "8.3.4",
    "babel-loader": "9.0.0",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "9.4.1",
    "compression-webpack-plugin": "10.0.0",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "inquirer": "9.1.4",
    "jest": "29.2.2",
    "mobx-keystone": "1.1.1",
    "semver": "7.3.8",
    "size-limit": "8.1.0",
    "ts-loader": "9.4.1",
    "typed-emitter": "2.1.0",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "11.10.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.12.1",
    "lodash": "4.17.21",
    "mobx": "6.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
