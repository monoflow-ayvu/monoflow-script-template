{
  "name": "monoflow-script-env",
  "version": "1.18.0",
  "description": "Script padr√£o de todos os scripts. Template para criar um script.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Nome",
        "description": "Nome para saludar",
        "tableView": true,
        "key": "name",
        "type": "textfield",
        "input": true,
        "defaultValue": "User"
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "block": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest --silent"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@babel/plugin-transform-arrow-functions": "7.25.9",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-typescript": "7.27.0",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "11.2.0",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/node": "22.14.1",
    "@types/uuid": "10.0.0",
    "babel-loader": "10.0.0",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "13.1.0",
    "compression-webpack-plugin": "11.1.0",
    "graphql": "16.10.0",
    "graphql-request": "7.1.2",
    "inquirer": "12.5.2",
    "jest": "29.7.0",
    "mobx-keystone": "1.11.4",
    "semver": "7.7.1",
    "size-limit": "11.2.0",
    "ts-loader": "9.5.2",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.5",
    "webpack": "5.99.5",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "11.10.0",
    "cross-fetch": "3.2.0",
    "firebase": "9.23.0",
    "lodash": "4.17.21",
    "mobx": "6.13.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
