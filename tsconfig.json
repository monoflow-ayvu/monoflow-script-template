{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES5",
    "allowJs": true,
    "lib": [
      "es2016"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "firebase"
    ]
  },
  "exclude": [
    "./node_modules/@types/node",
    "./node_modules/@fermuch/telematree"
  ]
}